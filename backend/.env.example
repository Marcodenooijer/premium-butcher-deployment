# Backend Environment Variables
# Copy this file to .env and fill in your values

# Server Configuration
NODE_ENV=production
PORT=3000

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=premium_butcher
DB_USER=premium_butcher_user
DB_PASSWORD=your_secure_database_password_here
DB_SSL=true

# Frontend URL (for CORS)
FRONTEND_URL=https://biologischvleeschatelier.profile.elysia.marketing

# JWT Secret (generate with: openssl rand -hex 32)
JWT_SECRET=your_jwt_secret_key_here_minimum_32_characters

# Encryption Key (generate with: openssl rand -hex 32)
ENCRYPTION_KEY=your_encryption_key_here_32_bytes_hex

# CSRF Secret
CSRF_SECRET=your_csrf_secret_here

# API Secret (for request signing)
API_SECRET=your_api_secret_here

# Shopify Configuration
SHOPIFY_SHOP_NAME=your-shop.myshopify.com
SHOPIFY_API_KEY=your_shopify_api_key
SHOPIFY_API_SECRET=your_shopify_api_secret
SHOPIFY_ACCESS_TOKEN=shpat_your_access_token
SHOPIFY_WEBHOOK_SECRET=your_webhook_secret

# Email Configuration (SMTP)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=noreply@biologischvleeschatelier.nl
SMTP_PASSWORD=your_smtp_password
SMTP_FROM=noreply@biologischvleeschatelier.nl

# Security Team Contacts
SECURITY_TEAM_EMAILS=security@biologischvleeschatelier.nl
SECURITY_TEAM_PHONE=+31612345678
